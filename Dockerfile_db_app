# Create db_app image
FROM rasenshurikenbum/nodejs:latest

ARG DB_HOST_ARG
ARG DB_USER_ARG
ARG DB_PASSWORD_ARG
ARG DB_NAME_ARG

ENV DB_HOST=${DB_HOST_ARG}
ENV DB_USER=${DB_USER_ARG}
ENV DB_PASSWORD=${DB_PASSWORD_ARG}
ENV DB_NAME=${DB_NAME_ARG}

COPY db_app /app/
CMD cd /app && DB_HOST=${DB_HOST} DB_USER=${DB_USER} DB_PASSWORD=${DB_PASSWORD} DB_NAME=${DB_NAME} node /app/main.js

EXPOSE 3000